---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<li
	class="flex flex-col items-center gap-4 p-10 border border-border border-b-4 hover:border-b-main duration-100"
>
	<slot />
	<h2 class="text-2xl text-main mt-4">
		{title}
	</h2>
	<p class="text-center">
		{body}
	</p>
</li>
